# Cloud Compliance Canvas - Environment Variables
# Copy this file to .env.local for local development

# API Configuration
VITE_API_URL=http://localhost:8000/api

# Azure AD Configuration (for SSO)
VITE_AZURE_CLIENT_ID=your-azure-client-id
VITE_AZURE_TENANT_ID=your-azure-tenant-id
VITE_AZURE_REDIRECT_URI=http://localhost:5173

# Claude AI API (for AI features)
VITE_CLAUDE_API_KEY=your-claude-api-key

# AWS Configuration (optional - for direct frontend AWS calls)
VITE_AWS_REGION=us-east-1

# Feature Flags
VITE_ENABLE_DEMO_MODE=true
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_FINOPS=true

# App Configuration
VITE_APP_NAME=Cloud Compliance Canvas
VITE_APP_VERSION=1.0.0
